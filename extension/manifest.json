  {
    "name": "Evernote Web Highlight Tool",
    "version": "1.1",
    "description": "Highlight text in Evernote Web with any color using shortcut \"Ctrl (Control on macOS) + Shift + h\".",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
      }
    },
    "content_scripts": [{
      "matches": ["https://www.evernote.com/*/web*"],
      "js": ["js/hotkeys.min.js", "js/highlight.js"],
      "run_at": "document_end"
    }],
    "icons": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    },
    "manifest_version": 2
  }